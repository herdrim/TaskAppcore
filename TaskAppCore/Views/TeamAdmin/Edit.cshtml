@model TeamEditModel

@{
    ViewBag.Title = "Team Edit";
}

<div class="bg-primary panel-body"><h4>Edit User</h4></div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Edit" method="post">
            <input type="hidden" name="TeamId" value="@Model.Team.TeamId" />
            <input name="TeamName" value="@Model.Team.Name" />
            
            <h6 class="bg-info panel-body">Add Members To @Model.Team.Name</h6>
            <table class="table table-bordered table-condensed">
                @if (@Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (var m in Model.NonMembers)
        {
            <tr>
                <td>@m.UserName</td>
                <td>
                    <input type="checkbox" name="IdsToAdd" value="@m.Id" />
                </td>
            </tr>
    }
    }
            </table>

            <h6 class="bg-info panel-body">Remove Members From @Model.Team.Name</h6>
            <table class="table table-bordered table-condensed">
                @if (@Model.Members.Count() == 0)
            {
                <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (var m in Model.Members)
        {
            <tr>
                <td>@m.UserName</td>
                <td>
                    <input type="checkbox" name="IdsToDelete" value="@m.Id" />
                </td>
            </tr>
    }
    }
            </table>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Cancel</a>
</div>
