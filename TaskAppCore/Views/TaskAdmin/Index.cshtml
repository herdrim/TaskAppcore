@model IEnumerable<TaskAppCore.Models.Task>

@{
    ViewBag.Title = "Tasks";
}

<div class="bg-primary panel-body"><h4>Tasks</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deathline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsToDo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => task.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.Deathline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.IsToDo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.Team.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.User.Email)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-taskId="@task.TaskId" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-taskId="@task.TaskId">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>