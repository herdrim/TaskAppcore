@model TaskAdminEditModel

@{
    ViewBag.Title = "Task Edit";
}

<div class="bg-primary panel-body"><h4>Edit Task</h4></div>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Edit" method="post">
            <input type="hidden" name="TaskId" value="@Model.Task.TaskId" class="form-control" />
            <div class="form-group">
                <label asp-for="Task.Name" class="control-label"></label>
                <input name="Name" value="@Model.Task.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input name="Description" value="@Model.Task.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Task.Deathline" class="control-label"></label>
                <input name="Deathline" value="@Model.Task.Deathline" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Task.UserId" class="control-label"></label>
                <select name="UserId" class="form-control">
                    @if (Model.Task.User != null)
                    {
                        <option value="@Model.Task.UserId">@Model.Task.User.Email, @Model.Task.User.Team.Name</option>
                    }
                    @foreach (var u in Model.UsersList)
                {
                    <option value="@u.Id">@u.Email, @u.Team.Name</option>
            }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Cancel</a>
</div>

